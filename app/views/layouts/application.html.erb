<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <title><%= title %>Metior</title>

  <%= javascript_include_tag :all %>
  <%= javascript_include_tag 'd3/d3.min', 'd3/d3.time.min' %>
  <%= stylesheet_link_tag :all %>
  <link rel="icon" href="<%= image_path 'favicon.png' %>" type="image/png">
  <%= csrf_meta_tag %>

  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />

  <script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-258817-8']);
    _gaq.push(['_trackPageview']);
    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
  </script>
  <script src="https://apis.google.com/js/plusone.js" type="text/javascript"></script>
  <script src="http://platform.twitter.com/widgets.js" type="text/javascript"></script>
</head>
<body>
    <a href="https://github.com/koraktor/metior.heroku.com">
        <img id="github-ribbon"
             src="http://s3.amazonaws.com/github/ribbons/forkme_left_orange_ff7600.png"
             alt="Fork me on GitHub" />
    </a>
    <div id="header">
        <div id="social">
            <g:plusone href="http://metior.herokuapp.com" size="tall"></g:plusone>
            <a href="http://twitter.com/share" class="twitter-share-button"
               data-count="vertical"
               data-text="Get online statistics about GitHub repositories using Metior – "
               data-url="http://metior.herokuapp.com">
                Tweet
            </a>
        </div>
        <%= link_to ('Meti%sr' % [image_tag('metior.png')]).html_safe, '/' %>
    </div>
    <div id="content">
        <% if flash[:error] %>
            <div id="flash-error"><%= flash[:error].html_safe %></div>
        <% end %>
        <%= yield %>
    </div>
    <div id="footer">
        © 2011 — Sebastian Staudt<br />
        Powered by <a href="http://koraktor.de/metior">Metior</a>.
        Follow <a href="https://twitter.com/metiorstats">@metiorstats</a> on
        Twitter.
    </div>
</body>
</html>
