<script type="text/javascript">
    $(formHandler);
</script>

<form action="<%= stats_path %>">
    <input id="user" name="user" type="text" value="<%= @user || 'user name' %>" />
    /
    <input id="project" name="project" type="text" value="<%= @project || 'project' %>" />
    <br /><br />
    <button id="submit" type="submit">Generate stats!</button>
</form>

<div id="top_projects">
    <h2>Top projects</h2>
    <ol>
    <% Project.order_by([:analyses, :desc]).limit(10).each do |project| %>
      <li><%= link_to project.path, "/#{project.path}" %></li>
    <% end %>
    </ol>
</div>
